{
  "name": "@ship/shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared TypeScript types and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
